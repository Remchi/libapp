<%= form_for @book do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title, placeholder: "Title of the book" %>

  <%= f.label :author %>
  <%= f.text_field :author, placeholder: "Author" %>

  <%= f.label :pages %>
  <%= f.number_field :pages, min: 0 %>

  <%= f.label :description %>
  <%= f.text_area :description, placeholder: "Book description" %>

  <%= f.submit class: "btn btn-primary" %>

<% end %>
